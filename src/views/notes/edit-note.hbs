<div class="card" style="max-width: 400px; margin: auto; border-radius: 10px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
    <div class="card-header bg-secondary text-white text-center" style="border-radius: 10px 10px 0 0; font-size: 18px;">
        Editar Nota
    </div>
    <div class="card-body" style="padding: 20px;">
        <form action="/notes/edit/{{note._id}}?_method=PUT" method="POST">
            <input type="hidden" name="_method" value="PUT">

            <div class="form-group">
                <label for="servicio" style="font-size: 14px;">Servicio</label>
                <input 
                    type="text" 
                    id="servicio" 
                    name="servicio" 
                    class="form-control" 
                    value="{{note.servicio}}" 
                    style="font-size: 14px; padding: 8px;">
            </div>

            <div class="form-group">
                <label for="descripcion" style="font-size: 14px;">Descripci√≥n</label>
                <textarea 
                    id="descripcion" 
                    name="descripcion" 
                    class="form-control" 
                    style="font-size: 14px; padding: 8px; resize: none; height: 100px;">{{note.descripcion}}</textarea>
            </div>

            <div class="form-group text-center">
                <button 
    class="btn btn-secondary btn-sm" 
    type="submit" 
    style="font-size: 14px; padding: 5px 15px;">
    Guardar
</button>

            </div>
        </form>
    </div>
</div>

